<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dam2.ejerciciorepaso.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce tu nombre:"
        android:id="@+id/nombre"
        android:layout_marginTop="41dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iNombre"
        android:layout_below="@+id/nombre"
        android:layout_alignEnd="@+id/nombre"
        android:layout_alignStart="@+id/nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provincias:"
        android:id="@+id/tProvincias"
        android:layout_marginTop="43dp"
        android:textSize="20dp"
        android:layout_below="@+id/iNombre"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sProvincias"
        android:layout_below="@+id/tProvincias"
        android:layout_alignEnd="@+id/iNombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localidades:"
        android:id="@+id/tLocalidades"
        android:textSize="20dp"
        android:layout_below="@+id/sProvincias"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sLocalidades"
        android:layout_below="@+id/tLocalidades"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sProvincias" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quieres una notificaciÃ³n"
        android:id="@+id/sNotificacion"
        android:layout_below="@+id/sLocalidades"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textOn="Si"
        android:textOff="No"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/continua"
        android:layout_below="@+id/sNotificacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />
</RelativeLayout>
